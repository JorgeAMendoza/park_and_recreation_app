<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecHomeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rec_program_button</item>
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:text">Programs</item>
    </style>

    <style name="item_name" parent="Theme.MaterialComponents">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="item_description" parent="Theme.MaterialComponents">
        <item name="android:textSize">16dp</item>
    </style>
</resources>
